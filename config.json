{
  "ocfl": "../oni-express/ocfl",
  "identifierNamespace": "public_ocfl",
  "uriIds": "identifiers",
  "retries": 10,
  "retryInterval": 10,
  "purge": true,
  "updateSchema": true,
  "dryRun": false,
  "catalogFilename": [ "ro-crate-metadata.jsonld", "ro-crate-metadata.json" ],
  "solrBase": "http://localhost:8983/solr/ocfl",
  "hashAlgorithm": "md5",
  "waitPeriod": 0,
  "schemaBase": "./config/schema_base.json",

  "logLevel": "debug",

  "debug": [ "creator", "author" ],

  "log": {
    "filename": "./logs/indexer.log",
    "level": "info"
  },


  "portal": {
    "base": "./config/portal_base.json",
    "config": "./config/portal.json",
    "facetDefaults": {
      "limit": 5
    }
  },



  "fields": {
    "main_search": [ "name", "description", "id", "author" ],
    "map_all": {
      "@id": [ "id", "id_orig" ],
      "@type": [ "record_type_s", "type_label" ]
    },

    "licenses": {
      "__default__": "public"
    },

    "types": {

      "Dataset": {
    
        "@id": { 
          "name": "public_ocfl",
          "filter": { "is_root": true }
        },
        "@reverse": { "skip": true },
 
        "hasPart": { "skip": true },

        "hasFile": { "skip": true },
      
        "temporalCoverage": { "skip": true },

        "license": {
          "multi": true,
          "facet": true
        },

        "licenseOriginal": {
          "multi": true
        },

        "author": {
          "multi": true,
          "resolve": {
            "search": "@id",
            "display": "name"
          },
          "facet": true
        },

        "creator": {
          "index_as": "author",
          "multi": true,
          "resolve": {
            "search": "@id",
            "display": "name"
          },
          "facet": true
        },


        "keywords": {
          "multi": true,
          "facet": {
            "tokenize": { "delim": "[,;]\\s*" }
          }
        },

        "description": {
          "link_rebase": "publication"
        },

        "about": [
          {
            "match": { "@id": { "re": "anzsrc-for" } },
            "index_as": "FOR",
            "multi": true,
            "resolve": {
              "search": "@id", 
              "display": "name"
            }
          }
        ],

        "contactPoint" : {
          "multi": "true",
          "escapedJSON": true
        },

        "geo" : {
          "multi": "true",
          "escapedJSON": true
        },

        "datePublished": {
          "facet": true,
          "validate": {
            "re": "^\\d\\d\\d\\d"
          }
        },
      
        "publisher": {
          "multi": true,
          "resolve": {
            "search": "@id", 
            "display": "name"
          }
        }
      }
    }
  }
}
