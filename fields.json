{

  "map_all": {
    "@id": [ "id", "id_orig" ],
    "@type": [ "record_type_s", "type_label" ]
  },

  "licenses": {
    "^https://creativecommons.org/": "public",
    "__default__": "internal"
  },

  "types": {

    "Dataset": {
    
      "@id": { 
        "name": "ocfl_demo",
        "filter": { "is_root": true }
      },
      "@reverse": { "skip": true },
      "hasPart": { "skip": true },
      "hasFile": { "skip": true },
      "temporalCoverage": { "skip": true },

      "license": {
        "multi": true,
        "facet": true
      },

      "author": {
        "resolve": "multi",
        "facet": true
      },

      "keywords": {
        "facet": {
          "tokenize": ","
        }
      },

      "datePublished": {
        "facet": true,
        "validate": "date"
      },
      
      "publisher": {
        "resolve": "single",
        "facet": {
          "field": "@id"
        }
      }
    },

    "Person": {
      "@id" : {
        "filter" : { "re" : ".*$"}
      },
      "@reverse": { "skip": true },

      "affiliation": {
        "resolve": "multi"
      },

      "birthDate": {
        "facet": true,
        "validate": "date"
      }
    }
  }
}