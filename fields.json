{
  "Dataset": {
    "core": "dataset",
    "format": "jsonld",
    "recordTypeName": "dataset",
    "skip": ["hasPart"],
    "flatten": {
      "creator": {
        "obj": "array"
      },
      "GeoCoordinates": {}
    },
    "facets": {
      "datePublished": {
        "field_suffix": "_Dataset_facet",
        "trim": true
      },
      "keywords": {
        "trim": true,
        "field_suffix": "_Dataset_facetmulti",
        "tokenize": {
          "delim": ","
        }
      },
      "creator": {
        "trim": true,
        "fieldName": "name",
        "field_suffix": "_Dataset_facetmulti"
      },
      "publisher": {
        "trim": true,
        "fieldName": "@id",
        "field_suffix": "_Dataset_facet"
      },
      "type": {
        "trim": true,
        "field_suffix": "facetmulti",
        "skip_entry_type_suffix": true,
        "escape_value": "solr_field"
      }
    },
    "oai-pmh": {
      "core": "dataset",
      "set": "datasource:ReDBox"
    }
  },
  "Person": {
    "core": "dataset",
    "format": "jsonld",
    "recordTypeName": "person",
    "flatten": {
      "affiliation": {
        "obj": "array"
      }
    },
    "facets": {
      "type": {
        "trim": true,
        "field_suffix": "_Dataset_facetmulti",
        "skip_entry_type_suffix": true,
        "escape_value": "solr_field"
      }
    }
  }
}