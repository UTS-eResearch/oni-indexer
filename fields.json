{

  "map_all": {
    "@id": [ "id", "id_orig" ],
    "@type": [ "record_type_s", "type_label" ]
  },

  "types": {

    "Dataset": {
    
      "@id": { 
        "name": "ocfl_demo",
        "filter": { "is_root": true }
      },

      "hasPart": { "skip": true },

      "license": {
        "resolve": "multi",
        "facet": "true"
      },

      "creator": {
        "resolve": "multi",
        "facet": true
      },

      "keywords": {
        "facet": {
          "tokenize": ","
        }
      },

      "datePublished": {
        "facet": true,
        "validate": "date"
      },
      
      "publisher": {
        "resolve": "single",
        "facet": {
          "field": "@id"
        }
      }
    },

    "Person": {

      "affiliation": {
        "resolve": "multi"
      }

    }
  }
}