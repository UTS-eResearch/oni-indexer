{
  "name": "oni-indexer",
  "version": "1.0.6",
  "description": "Builds a Solr index for an oni data repository",
  "main": "index.js",
  "scripts": {
    "test": "./node_modules/.bin/_mocha",
    "index": "node oni-indexer.js --config ./config.json",
    "d:build": "source docker-build.sh",
    "d:index": "source docker-run.sh",
    "d:index:destroy": "source docker-run.sh clean"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/UTS-eResearch/oni-indexer/"
  },
  "keywords": [
    "solr",
    "ro-crate",
    "data",
    "oni"
  ],
  "author": "Moises",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "axios": "^0.18.1",
    "fs-extra": "^8.1.0",
    "hasha": "^5.2.2",
    "jsonld": "^3.2.0",
    "lodash": "^4.17.20",
    "ocfl": "^1.0.9",
    "prompts": "^2.3.2",
    "random-date-generator": "^1.0.2",
    "random-word": "^2.0.0",
    "ro-crate": "^1.5.3",
    "ro-crate-html-js": "^1.2.22",
    "uuid": "^3.4.0",
    "winston": "^3.3.3",
    "yargs": "^13.3.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "docker-cli-js": "^2.7.1",
    "mocha": "^7.2.0"
  }
}
