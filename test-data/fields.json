{
  "map_all": {
    "@id": [ "id", "id_orig" ],
    "@type": [ "record_type_s", "type_label" ]
  },

  "types": {

    "Dataset": {
      "path": {
        "filter": { "re": "^\\./|data/$" }
      },

      "hasPart": {"skip": true},

      "license": {
        "facet": true,
        "multi": true
      },

      "creator": {
        "resolve": "multi",
        "facet": true
      },
      "keywords": {
        "facet": {
          "tokenize": ","
        }
      },
      "datePublished": {
        "facet": true,
        "validate": "date"
      },
      "publisher": {
        "resolve": "single",
        "facet": {
          "field": "@id"
        }
      }
    },

    "Person": {

      "affiliation": {
        "resolve": "multi"
      }

    }
  }
}